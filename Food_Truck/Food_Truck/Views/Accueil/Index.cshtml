@using Food_Truck.Models;
@model Accueil_Model
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Flickity HTML init -->
<div class="gallery js-flickity"
     data-flickity-options='{ "wrapAround": true }'>
@foreach (var act in Model.actualites)
{
    
        <div class="gallery-cell" style="height:400px">
            <div class="container_img">
                <img src="@act.imageurl" style="width:100%;" />
                <div class="content_img">
                    <h1>@act.title</h1>
                    <p>@act.description</p>
                </div>
            </div>        
        </div>
    @*<div class="gallery-cell" style="height:400px">
        <img src="@act.imageurl" height="100%" width="100%" />
    </div>*@
} 

    
    
</div>

<h2 style="text-align:center">Nos Meilleures Ventes</h2>
<div class="row center-div" >
    @foreach(var p in Model.produits)
    {
            <div class="col-md-4">
            <div class="col-md-4 col-border-formation">
                <a href="@Url.Action("Index")">
                    <img src="@p.image" height="100%" width="100%" style="" />
                </a>
            </div>
            <div style="padding:2%; width:100%" class="col-md-4" >
                <p>@p.libellecommercial </p>
                <p>@p.prix_unitaire $ </p>
            </div>
            
            </div>     

    }
  </div>
@section Scripts
{
    <link href="~/Content/FormationStyle.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <script src="~/Content/FormationJs.js"></script>


}